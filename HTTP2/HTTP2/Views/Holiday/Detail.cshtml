@model HTTP2.Models.Holiday

@{
	ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div>
	<h4>Holiday</h4>
</div>
<div class="row">
	<div class="col-md-2">
		<div class="row">
			<img class="img-fluid card" style="object-fit: cover; max-height:125px; margin-bottom: 10px;" src=@Html.DisplayTextFor(model => model.Images[new Random().Next(0, model.Images.Count)]) />
		</div>
		<div class="row">
			<img class="img-fluid card" style="object-fit: cover; max-height:125px; margin-bottom: 9px" src=@Html.DisplayTextFor(model => model.Images[new Random().Next(0, model.Images.Count)]) />
		</div>
		<div class="row">
			<img class="img-fluid card" style="object-fit: cover; max-height:125px" src=@Html.DisplayTextFor(model => model.Images[new Random().Next(0, model.Images.Count)]) />
		</div>
	</div>
	<div class="col-md-6">
		<img class="img-fluid card" src=@Html.DisplayTextFor(model => model.Images[new Random().Next(0, model.Images.Count)]) />
	</div>
	<div class="col-md-4 align-self-center">
		<img class="img-fluid card" src=@Html.DisplayTextFor(model => model.Images[new Random().Next(0, model.Images.Count)]) />
	</div>
</div>
<div class="slider">
	@for (var i = 0; i < Model.Images.Count; i++)
	{
		<div class="slider-item">
			<img class="img-fluid card" style="max-height: 150px" src=@Html.DisplayTextFor(model => model.Images[i]) />
		</div>
	}
</div>
<hr />
<div class="row">
	<div class="col-sm-3">
		<select class="custom-select">
			<option selected="selected">Vertrekdatum</option>
			<option>20 maart</option>
			<option>12 juni</option>
			<option>8 februari</option>
		</select>
	</div>
	<div class="col-sm-3">
		<select class="custom-select">
			<option selected="selected">Reisduur</option>
			<option>5 dagen</option>
			<option>7 dagen</option>
			<option>9 dagen</option>
		</select>
	</div>
	<div class="col-sm-3">
		<select class="custom-select">
			<option selected="selected">Luchthaven</option>
			<option>Schiphol</option>
			<option>Eindhoven airport</option>
		</select>
	</div>
	<div class="col-md-3">
		<select class="custom-select">
			<option selected="selected">Reisgezelschap</option>
			<option>2 volwassen</option>
			<option>4 volwassenen</option>
			<option>2 volwassen 2 kinderen</option>
		</select>
	</div>
</div>
<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Id)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Id)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Country)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayTextFor(model => model.Country)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Location)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayTextFor(model => model.Location)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Price)
		</dt>
		<dd class="col-sm-10">
			&#8364; @Html.DisplayFor(model => model.Price)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Date)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Date)
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Holiday">Back to List</a>
</div>


